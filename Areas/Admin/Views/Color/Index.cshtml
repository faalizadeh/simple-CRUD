@model IEnumerable<ColorViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = ViewBag.TitlePage;
}

<div class="row mt-4">
    <div class="col-12">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div id="Add_Category" class="col-md-12 border-bottom ">
                        <form asp-area="Admin" asp-controller="Color" asp-action="AddColor">
                            <div class="row">
                                <div class="col-3 mb-2">
                                    <input type="submit" value="افزودن رنگ" class="btn btn-link green text-white">

                                </div>
                            </div>
                        </form>
                    </div>
                    <table id="List_Category" class="table table-striped col-12">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>نام رنگ</th>
                                <th>رنگ</th>
                                <th>ویرایش</th>
                                <th>حذف</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                var i = 0;
                                foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.ColorName</td>
                                        <td>
                                            <div>
                                                <i class="fa fa-car" style="color:@item.ColorNumber"></i>
                                            </div>
                                        </td>
                                        <td>
                                            <a class="btn btn-link" asp-area="Admin" asp-controller="Color" asp-action="EditColor" asp-route-Id="@item.ID">
                                                <i class="fa fa-edit " style="color:#017b44"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a id="Delete" class="btn btn-link" asp-area="Admin" asp-controller="Color" asp-action="DeleteColor" asp-route-Id="@item.ID">
                                                <i class="fa fa-trash" style="color:#017b44"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>